<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background"
    android:onClick="onClick">

    <ImageView
        android:layout_width="@dimen/coin_size"
        android:layout_height="@dimen/coin_size"
        android:id="@+id/iv_coin"
        android:src="@drawable/coin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_coin"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="@id/iv_coin"
        app:layout_constraintLeft_toLeftOf="@id/iv_coin"
        app:layout_constraintRight_toRightOf="@id/iv_coin"
        app:layout_constraintTop_toTopOf="@id/iv_coin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flip"
        app:layout_constraintTop_toBottomOf="@id/tv_coin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>